<div class="container">
    <div class="row">
        <div class="col-3">
            <h3>CAN HAZ?</h3>
            {{#each canHas}}
            <p>{{burger_name}}</p>
            <button value={{id}}>NOM</button>
            {{/each}}
        </div>

    </div>
    <div class="row justify-content-center">
        <div class="col-6">
            <img src="/assets/eat-da-burger-logo.png" alt="game logo" height="225" width="225">
            <h3>what kind?</h3>
            <form action="/" method="POST">
                <textarea type="text" name="burger"></textarea>
                <div><button type="submit">PLACE ORDER!</button></div>
            </form>
        </div>
    </div>

    <div class="container">
          <div class="row">
    <div class="col-3">
        <h3>WAS YUMZ!</h3>
        {{#each wasYumz}}
        <p>{{burger_name}}</p>
        {{/each}}
        </div>
        </div>
    </div>
</div>

<script>
    $("button").on("click", function (event) {
        const id = $(this).val();
        $.ajax({
            url: "api/" + id,
            method: "GET"
        }).done(window.location.assign("/"));
    });
</script>